    "@rpg-engine/soul": "^0.1.16",
    "@shelf/jest-mongodb": "^2.2.1",
    "@swc/core": "^1.3.20",
    "@swc/helpers": "^0.4.14",
    "@swc/jest": "^0.2.22",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.0",
