    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "apicache-plus": "^2.2.2",
    "babel-jest": "^27.5.1",
    "bcrypt": "^5.0.0",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
